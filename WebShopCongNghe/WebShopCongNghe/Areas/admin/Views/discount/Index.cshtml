@model IEnumerable<WebShopCongNghe.Models.table_discount>
@using WebShopCongNghe.Help

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/MyLayout.cshtml";
}

@section _Header{
    <link href="~/Areas/admin/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-primary ">
        <h6 class="m-0 font-weight-bold  text-white ">Quản lý khuyến mãi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <p>
                @Html.NoEncodeActionLink("<span class='icon'><i class='fas fa-plus'></i></span>  Thêm mới", "Create", "Create", "discount", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-info" })
            </p>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            Tiêu đề
                        </th>
                        <th>
                            Hình ảnh
                        </th>
                        <th>
                            Thứ tự
                        </th>
                        <th>
                            Hiển thị
                        </th>

                        <th>
                            Ngày cập nhật
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{var Number = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.Raw(Number++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.title)
                            </td>
                            <td>
                                <img src="~/Uploads/img/@item.img" width="150px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.order)
                            </td>
                            <td>
                                @(item.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.dateupdate)
                            </td>
                            <td>

                                @Html.NoEncodeActionLink("<span class='icon'><i class='fas fa-edit'></i></span>", " ", "Edit", "discount", new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-success" }) |
                                
                                @Html.NoEncodeActionLink("<span class='icon'><i class='fas fa-trash'></i></span>", " ", "Delete", "discount", new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger " })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section _Footer{
    <script src="~/Areas/admin/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/admin/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>
}