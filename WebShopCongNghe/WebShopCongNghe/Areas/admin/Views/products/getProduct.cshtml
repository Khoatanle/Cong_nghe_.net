@using WebShopCongNghe.Help
@model IEnumerable<WebShopCongNghe.Models.table_products>

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Tên
            </th>
            <th>
                Hình
            </th>

            <th>
                Hiển thị
            </th>

            <th>
                Ngày cập nhật
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @{var Number = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Raw(Number++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    <img src="~/Uploads/img/@item.img" width="150px" />
                </td>

                <td>
                    @(item.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                </td>

                <td>
                    @(item.dateupdate.HasValue ? item.dateupdate.Value.ToString("dd/MM/yyyy") : "")
                </td>
                <td>

                    @Html.NoEncodeActionLink("<span class='icon'><i class='fas fa-edit'></i></span>", "Edit", "Edit", "products", new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-success" }) |  
                    @Html.NoEncodeActionLink("<span class='icon'><i class='fas fa-trash'></i></span>", "Delete", "Delete", "products", new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger " })

                </td>
            </tr>
        }
    </tbody>
</table>
