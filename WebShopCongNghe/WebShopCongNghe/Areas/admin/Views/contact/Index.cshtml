@model IEnumerable<WebShopCongNghe.Models.table_contact>
@using WebShopCongNghe.Help

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/MyLayout.cshtml";
}

@section _Header{
    <link href="~/Areas/admin/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-gradient-primary ">
        <h6 class="m-0 font-weight-bold  text-white ">Quản lý liên hệ</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <p>
                @Html.NoEncodeActionLink("<span class='icon'><i class='fas fa-plus'></i></span>  Thêm mới", "Create", "Create", "contact", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-info" })
            </p>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            Thông tin
                        </th>
                        <th>
                            Địa chỉ
                        </th>
                        <th>
                            Mail
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{var Number = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.Raw(Number++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.info)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.mail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phonenum)
                            </td>

                            <td>

                                @Html.NoEncodeActionLink("<span class='icon'><i class='fas fa-edit'></i></span>", "Edit", "Edit", "contact", new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-success" }) |
                                @Html.NoEncodeActionLink("<span class='icon'><i class='fas fa-trash'></i></span>", "Delete", "Delete", "contact", new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger " })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section _Footer{
    <script src="~/Areas/admin/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/admin/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>
}
